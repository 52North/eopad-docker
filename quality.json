{
  "processDescription": {
    "process": {
      "id": "org.n52.project.tb15.eopad.SentinelQualityAreaOfInterest",
      "title": "Calculation of quality of a area of interest for Sentinel-2",
      "abstract": "Calculation of quality of a area of interest for Sentinel-2",
      "keywords": ["Cloud coverage"],
      "inputs": [
        {
          "id": "source",
          "title": "Source Input Image (sentinel-2 product in SAFE format)",
          "abstract": "Source Input Image (sentinel-2 product in SAFE format). Either provided inline, by reference or by product ID",
          "minOccurs": 1,
          "maxOccurs": 1,
          "input": {
            "formats": [
              {
                "mimeType": "application/zip",
                "default": true
              },
              {
                "mimeType": "text/plain",
                "default": false
              }
            ]
          },
          "additionalParameters": [
            {
              "role": "http://www.opengis.net/eoc/applicationContext/inputMetadata",
              "parameters": [
                {
                  "_comment": "The Profile element allows to define a more specific format than the registered MIME Media Type (e.g. GeoTiff)",
                  "name": "Profile",
                  "values": [
                    "http://www.opengis.net/eoc/formats/sensor/Sentinel-2"
                  ]
                }
              ]
            },
            {
              "role": "http://www.opengis.net/eoc/applicationContext/inputConstraints",
              "parameters": [
                {
                  "name": "CollectionsConstraints",
                  "values": [
                    "Sentinel-2",
                    "TODO: check which level works with NDVI"
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "aoi",
          "title": "Area of Interest to be considered during the quality assurance",
          "abstract": "Area of Interest to be considered during the quality assurance (e.g. cloud coverage will only play a role in the specific polygon)",
          "minOccurs": 1,
          "maxOccurs": 1,
          "input": {
            "formats": [
              {
                "mimeType": "application/geo+json",
                "default": true
              }
            ]
          },
          "additionalParameters": [
            {
              "role": "http://www.opengis.net/eoc/applicationContext/inputConstraints",
              "parameters": [
                {
                  "name": "GeometryConstraints",
                  "values": ["Polygon", "MultiPolygon"]
                }
              ]
            }
          ]
        }
      ],
      "outputs": [
        {
          "id": "result",
          "title": "The Sentinel image which passed the quality assurance",
          "input": {
            "formats": [
              {
                "mimeType": "application/zip",
                "default": true
              },
              {
                "mimeType": "text/plain",
                "default": true
              }
            ]
          },
          "additionalParameters": [
            {
              "role": "http://www.opengis.net/eoc/applicationContext/outputConstraints",
              "parameters": [
                {
                  "name": "CollectionsConstraints",
                  "values": ["Sentinel-2"]
                }
              ]
            }
          ]
        },
        {
          "id": "passed",
          "title": "False if the Sentinel image did not pass the quality assurance",
          "input": {
            "literalDataDomains": [
              {
                "valueDefinition": {
                  "anyValue": true
                },
                "dataType": {
                  "name": "boolean"
                }
              }
            ]
          }
        }
      ]
    },
    "processVersion": "1.0.0",
    "jobControlOptions": ["async-execute"],
    "outputTransmission": ["reference"]
  },
  "immediateDeployment": true,
  "executionUnit": [
    {
      "unit": {
        "type": "docker",
        "image": "docker.52north.org/eopad/snap-sentinel-2-quality:latest"
      }
    }
  ],
  "deploymentProfileName": "http://www.opengis.net/profiles/eoc/dockerizedApplication"
}